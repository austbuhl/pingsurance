<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Add New Lead</h4>
</div>
<div class="modal-body">
  <div class="card-body">
    <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %>
    <%= form_for @lead do |f|%>
      <div class="form-group row">
          <%= f.label :first_name, "First Name", :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_field :first_name, :class => "form-control", :placeholder => "Enter First Name"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name, "Last Name", :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_field :last_name, :class => "form-control", :placeholder => "Enter Last Name"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone_number, "Phone Number", :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.phone_field :phone_number, {:class => "form-control", :placeholder => "123-456-7890", :pattern => "[0-9]{3}-[0-9]{3}-[0-9]{4}"}%>
        </div>
      </div>
      <div class="form-group row">
        <% f.label :message, :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-12">
          <%= f.text_area :message, :class => "form-control", :placeholder => "Enter Message"%>
        </div>
      </div>
      <%= f.submit 'Create & Send', :class => "btn btn-success float-right" %>
      <button type="button" class="btn btn-danger float-right mr-3" data-dismiss="modal">Cancel</button>
  <% end %>
</div>

