<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Add New Lead</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<div class="modal-body">
  <div class="card-body">
    <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %>
    <%= form_for @lead do |f|%>
      <div class="form-group row">
          <%= f.label :first_name, :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_field :first_name, :class => "form-control", :placeholder => "Enter First Name"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name, :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_field :last_name, :class => "form-control", :placeholder => "Enter Last Name"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone_number, :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Enter Phone Number"%>
        </div>
      </div>
      <div class="form-group row">
        <% f.label :message, :class => "col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%= f.text_area :message, :class => "form-control", :placeholder => "Enter Message"%>
        </div>
      </div>

      <%= f.submit 'Create Lead', :class => "btn btn-primary float-right" %>
  <% end %>
  
</div>

