<h1>Pingsurance</h1>

<%= link_to 'Add New Lead', new_lead_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Date Texted</th>
    </tr>
  </thead>
  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.full_name %></td>
        <td><%= lead.phone_number %></td>
        <td><%= lead.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>